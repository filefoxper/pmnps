{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": ".",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "exclude": ["node_modules", "test"]
}
